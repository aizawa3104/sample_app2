<%= form_for(@car, url: yield(:url)) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <div>
      <%= f.label  "タイトル（車種名）" %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label "詳細説明" %>
      <%= f.text_area :body %>
    </div>

    <div>
      <%= f.label "車両区分（電気自動車・ハイブリッド・ガソリン・ディーゼル）" %>
      <%= f.text_field :carmodel %>
    </div>

    <div>
      <%= f.label "車両サイズ（定員・ザイズ）" %>
      <%= f.text_field :carsize %>
    </div>

    <div>
      <%= f.label "備考" %>
      <%= f.text_area :other %>
    </div>

    <div class="picture">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </div>

    <div>
      <%= image_tag @car.picture.url if @car.picture? %>
    </div>

    <%= f.submit yield(:button_text) %>

  <% end %>